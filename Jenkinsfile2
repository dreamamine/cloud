pipeline {
  environment {
    registry = "docker_hub_account/imech"
    registryCredential = 'dockerhub'
  }
  agent
    {
        dockerfile
        {
            filename 'Dockerfile'
            args "-u root -v /var/run/docker.sock:/var/run/docker.sock"
        }
    }
  stages {
    stage('Building image') {
      steps{
        script {
          docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
  }
}
