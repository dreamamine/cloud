
node {
	deff app
	stage ('Clone repository') {
            checkout scm
	    }
	stage ('Build image') {
           app = docker.build("imech/phpapp")
            }
        stage ('Test image') {
           app.inside
               sh 'echo "Tests passed"'
            }
      	stage ('Push image') {
	   docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials'){
	   app.push("${env.BUILD_NUMBER}")
	   app.push("latest")
    }
    	stage("Deploy to staging") {
     	steps {
	  
	   sh "docker run -d --rm -p 80:80 --name imech/phpapp"
     }
     }
}
}
